@using Prova.UI.Helpers
@model System.Collections.Generic.IEnumerable<Prova.Application.ViewModels.ContaViewModel>

@{
    ViewBag.Title = "Lista de Contas";
}
<div>
    <h2>Controle de Usuários</h2>
</div>
<div class="panel panel-default">
    <div class="panel-heading">
        <strong>@ViewBag.Title</strong>
    </div>
    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Senha)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeUsuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Senha)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Contas", new {id = item.Id})" class="btn btn-default"><span title="Editar" class="glyphicon glyphicon-pencil"></span></a>
                    <a href="@Url.Action("Details", "Contas", new {id = item.Id})" class="btn btn-default"><span title="Detalhes" class="glyphicon glyphicon-search"></span></a>
                    <a href="@Url.Action("Delete", "Contas", new {id = item.Id})" class="btn btn-danger"><span title="Excluir" class="glyphicon glyphicon-trash"></span></a>
                    
                </td>
            </tr>
        }

    </table>
</div>

<div>
    <div class="form-group">
        @Html.ActionLink("Nova Conta", "Create", "Contas", null, new { @class = "btn btn-primary" })
    </div>
</div>